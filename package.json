{
    "name"           : "pika-mocha",
    "version"        : "1.0.0",
    "description"    : "",
    "scripts"        : {
        "build"        : "pika build",
        "build:watch"  : "watch \"npm run build; rsync -cavzu pkg/ .serve/ \" ./src ./assets",
        "lint"         : "tslint -c tslint.json 'src/**/*.ts'",
        "prepare"      : "npm run build; npm run lint",
        "serve"        : "es-dev-server --config es-dev-server.config.js --root-dir ./serve",
        "test:headless": "mocha-headless-chrome -f http://localhost:8888/assets/test-bundled.html"
    },
    "author"         : "Florian Hehlen <florian@hehlen.name>",
    "license"        : "MIT",
    "devDependencies": {
        "@pika/pack"                  : "^0.5.0",
        "@pika/plugin-build-node"     : "^0.6.1",
        "@pika/plugin-build-web"      : "^0.6.1",
        "@pika/plugin-bundle-web"     : "^0.6.1",
        "@pika/plugin-copy-assets"    : "^0.6.1",
        "@pika/plugin-ts-standard-pkg": "^0.6.1",
        "@pika/web"                   : "^0.6.1",
        "@types/chai"                 : "^4.2.3",
        "@types/mocha"                : "^5.2.7",
        "chai"                        : "^4.2.0",
        "es-dev-server"               : "^1.18.4",
        "mocha"                       : "^6.2.1",
        "mocha-headless-chrome"       : "^2.0.3",
        "pika-plugin-minify"          : "^0.1.0",
        "tslint"                      : "^5.20.0",
        "typescript"                  : "^3.6.4",
        "watch"                       : "^1.0.2"
    },
    "dependencies"   : {
        "lit-element": "^2.2.1",
        "lit-html"   : "^1.1.2"
    },
    "@pika/pack"     : {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg"
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-bundle-web",
                {}
            ],
            [
                "@pika/plugin-copy-assets",
                {
                    "files": [
                        "/assets",
                        "/node_modules/lit-html",
                        "/node_modules/lit-element"
                    ]
                }
            ]
        ]
    }
}
